# Maintainer: Lanhild <archlan@protonmail.com>

pkgname=archlan-scripts
pkgver=1.0
pkgrel=1
pkgdesc="ArchLan scripts."
url="https://github.com/archlan/archlan-apps"
arch=('any')
license=('GPL3')
makedepends=()
depends=('light' 'xorg-xbacklight')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	(find scripts -type f -exec install -Dm 755 "{}" "$pkgdir/usr/share/archlan/{}" \;)
	(find bin -type f -exec install -Dm 755 "{}" "$pkgdir/usr/local/{}" \;)
}
