pkgname=archlan-fonts
pkgver=1.0
pkgrel=3
pkgdesc="ArchLan fonts."
url="https://github.com/archlan/archlan-apps"
arch=('any')
license=('GPL3')
makedepends=()
depends=()
conflicts=()
groups=('archlan-apps' 'archlan-de')
provides=("${pkgname}")
options=(!strip !emptydirs)

prepare() {
	cp -af ../files/. ${srcdir}
}

package() {
	(find * -type f -exec install -Dm 644 "{}" "$pkgdir/usr/share/fonts/archlan/{}" \;)
}
